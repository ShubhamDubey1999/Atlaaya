@model Atlaaya.Models.User
<div class="modal fade"
	 id="CreateUserModalCenter"
	 tabindex="-1"
	 role="dialog"
	 aria-labelledby="CreateUserModalCenterTitle"
	 aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content container">
			<div class="modal-header">
				<h2 class="modal-title text-muted" id="CreateUserModalCenterTitle">
					Create User
				</h2>
				<button type="button"
						class="close"
						data-dismiss="modal"
						aria-label="Close">
					<span style="font-size: larger" aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form id="CreateUserForm">
					<input type="text"
						   class="form-control form-input mt-2 w-100"
						   placeholder="Name" id="RegUsername" asp-for="Username" required />
					<input type="email"
						   class="form-control form-input mt-2 w-100"
						   placeholder="Email" id="RegEmail" asp-for="Email" required />
					<input type="password"
						   class="form-control form-input mt-2 w-100"
						   placeholder="Password" id="RegPassword" name="Password" value="@Model.Password" required />
					<input type="password"
						   class="form-control form-input mt-2 w-100"
						   placeholder="Confirm Password" id="RegCnfPassword" value="@Model.Password" name="Password" required />
					<select class="form-control form-input mt-2 w-100" asp-items="@(new SelectList(ViewBag.UserRole,"Id","UserRole"))" id="RegRole" asp-for="Role" required>
					</select>
					<div class="text-center p-5">
						<button type="button" id="btnCreateUser" onclick="Register()" class="enquire-btn">Create</button>
					</div>
				</form>

			</div>
		</div>
	</div>
</div>