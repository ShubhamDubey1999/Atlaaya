<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chalk Studio</title>
    <link rel="stylesheet" href="~/css/custom.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon"
          type="image/x-icon"
          href="~/assets/logo.jpg" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
          rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</head>
<body>
        <nav class="sticky-top navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand ml-5" href="#">Chalk Studio</a>
            <button class="navbar-toggler"
                    type="button"
                    data-toggle="collapse"
                    data-target="#navbarNav"
                    aria-controls="navbarNav"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item p-2 active">
                        <a class="nav-link nav-fs" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item p-2">
                    <a class="nav-link nav-fs" asp-controller="Home" asp-action="About">About</a>
                    </li>
                    <li class="nav-item p-2">
                    <a class="nav-link nav-fs" asp-controller="Home" asp-action="Projects">Projects</a>
                    </li>
                    <li class="nav-item p-2">
                    <a class="nav-link nav-fs" asp-controller="Home" asp-action="Careers">Careers</a>
                    </li>
                    <li class="nav-item p-2">
                    <a class="nav-link nav-fs" asp-controller="Home" asp-action="Gallery">Gallery</a>
                    </li>
                    <li class="nav-item p-2">
                        <a class="nav-link nav-fs" href="./blogs.html">Blogs</a>
                    </li>
                    <li class="nav-item">
                        <a class="enquire-nav-btn"
                           data-toggle="modal"
                           data-target="#exampleModalCenter"
                           href="#">Enquire Now</a>
                    </li>
                </ul>
            </div>
        </nav>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <!-- Modal -->
    <div class="modal fade"
         id="exampleModalCenter"
         tabindex="-1"
         role="dialog"
         aria-labelledby="exampleModalCenterTitle"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content container">
                <div class="modal-header">
                    <h2 class="modal-title text-muted" id="exampleModalCenterTitle">
                        Say Hello
                    </h2>
                    <button type="button"
                            class="close"
                            data-dismiss="modal"
                            aria-label="Close">
                        <span style="font-size: larger" aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <input type="text"
                               class="form-control form-input mt-2 w-100"
                               placeholder="First Name" />
                        <input type="text"
                               class="form-control form-input mt-2 w-100"
                               placeholder="Last Name" />
                        <input type="text"
                               class="form-control form-input mt-2 w-100"
                               placeholder="Email" />
                        <input type="text"
                               class="form-control form-input mt-2 w-100"
                               placeholder="Phone" />
                        <input type="text"
                               class="form-control form-input mt-2 w-100"
                               placeholder="Location / Area" />
                        <input type="text"
                               class="form-control form-input mt-2 w-100"
                               placeholder="Enter budget in Lakh" />
                        <input type="text"
                               class="form-control form-input mt-2 w-100"
                               placeholder="Message" />
                        <div class="text-center p-5">
                            <a class="enquire-btn" href="#">Submit</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <footer style="background: #000">
        <div class="col-md-12 text-white p-5">
            <div class="row">
                <div class="col-md-4" style="font-size: smaller">
                    ©2025 Chalk Studio Interiors. Website Designed by HINTT
                </div>
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-1">
                                    <i style="font-size: x-large"
                                       class="fa fa-envelope-o"
                                       aria-hidden="true"></i>
                                </div>
                                <div class="col-md-1">
                                    <i style="font-size: x-large"
                                       class="fa fa-linkedin-square"
                                       aria-hidden="true"></i>
                                </div>
                                <div class="col-md-1">
                                    <i style="font-size: x-large"
                                       class="fa fa-instagram"
                                       aria-hidden="true"></i>
                                </div>
                                <div class="col-md-1">
                                    <i style="font-size: x-large"
                                       class="fa fa-facebook-square"
                                       aria-hidden="true"></i>
                                </div>
                                <div class="col-md-1">
                                    <i style="font-size: x-large"
                                       class="fa fa-whatsapp"
                                       aria-hidden="true"></i>
                                </div>
                                <div class="col-md-1">
                                    <i style="font-size: x-large"
                                       class="fa fa-map-marker"
                                       aria-hidden="true"></i>
                                </div>
                                <div class="col-md-6">
                                    <p>
                                        <em>
                                            <a class="text-white float-right"
                                               href="#"
                                               id="back-to-top">Back To Top</a>
                                        </em>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <p class="text-center p-3">Call Us- 09599197669</p>
            </div>
        </div>
    </footer>
    @* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $("#back-to-top").click(function () {
            $("body,html").animate(
                {
                    scrollTop: 0,
                },
                400
            );
            return false;
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
